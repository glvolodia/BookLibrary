<div class="panel panel-default">
  	<div class="panel-body">
	    <div class="row">
		    <div class="col-md-6">
		        <%= image_tag @book.image.url(:medium) %>
		    </div>
		    <br><br>
		    <div class="col-md-6">    
		        <div class="table-responsive">
		          	<table class="table">
			            <thead>
			              <tr class="text-center">
			                <td><h2><%= @book.title %></h2></td>
			              </tr>
			            </thead>  
			            <tbody class="center">
			              <tr>
			                <td><h4><strong>Year:</strong></h4></td>
			                <td><h4><%= @book.year %></h4></td>
			              </tr>
			              <tr>
			                <td><h4><strong>Author:</strong></h4></td>
			                <td><h4><%= @book.author %></h4></td>
			              </tr>
			              <tr>
			                <td><h4><strong>Genre:</strong></h4></td>
			                <td><h4><%= @book.genre %></h4></td>
			              </tr>
			            </tbody>
		        	</table>
		    	</div>
		    	<br><br>
		    	<div class="btn-group" role="group" aria-label="...">
		    	<% if @book.user == current_user %>
					<button type="button" class="btn btn-default"><%= link_to 'Edit', edit_book_path(@book) %></button>
				 	<button type="button" class="btn btn-default"><%= link_to 'Delete', @book, method: :delete, data: { confirm: 'Are you sure?' } %></button>
				<% end %> 	
				  	<button type="button" class="btn btn-default"><%= link_to 'Back', books_path %></button>
				</div>
				
			</div>
		</div>
	</div>
</div>		


